{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "packages",
  "projects": {
    "signalstory": {
      "projectType": "library",
      "root": "packages/signalstory",
      "sourceRoot": "packages/signalstory/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "packages/signalstory/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/signalstory/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "packages/signalstory/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:jest",
          "options": {
            "tsConfig": "packages/signalstory/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"],
            "include": ["packages/**/*.spec.ts"]
          }
        }
      }
    },
    "sample": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "skipTests": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:interceptor": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:resolver": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "root": "sample",
      "sourceRoot": "sample/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "statsJson": true,
            "outputPath": {
              "base": "dist/sample"
            },
            "index": "sample/src/index.html",
            "polyfills": ["zone.js"],
            "tsConfig": "sample/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": ["sample/src/favicon.ico", "sample/src/assets"],
            "styles": ["sample/src/styles.scss"],
            "scripts": [],
            "browser": "sample/src/main.ts"
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "sample:build:production"
            },
            "development": {
              "buildTarget": "sample:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "sample:build"
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
